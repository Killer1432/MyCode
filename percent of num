package labexer1;
import java.util.Scanner;
/**
 *
 * @author Jo-an Enriquez
 */
public class LabExer1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
   Scanner src = new Scanner(System.in);
   
   System.out.println("Enter Two Numbers");
   System.out.print("First Number: ");
   double Num1 = src.nextDouble();
   System.out.print("Second Number: ");
      double Num2 = src.nextDouble();
    
      //The main method accepts two (2) values of double type entered by the user.
     //plusFive - adds five to each value and displays the results
      plusFive(Num1,Num2);
      //timesTwo - multiplies each value by two and displays the results
timesTwo(Num1,Num2);
//showSquared - multiplies each number by itself and displays the results
showSquared(Num1,Num2);
//computePercent - displays the value of the first number as the percentage of the second one in sentence format.
computePercent(Num1,Num2);
    
    
}
    //the four (4) methods below with two (2) parameters each. Use public static void in each method declaration
    
public static void plusFive(double a,double b){
double Plus1 = a + 5;
double Plus2 = b + 5;
System.out.print(Plus1);
System.out.print(" and ");
System.out.println( Plus2);
}
public static void timesTwo(double a,double b){
    double Plus1 = a * 2;
double Plus2 = b * 2;
System.out.print(Plus1);
System.out.print(" and ");
System.out.println( Plus2);
}
public static void showSquared(double a,double b){
   double Plus1 = a * a;
double Plus2 = b * b;
System.out.print(Plus1);
System.out.print(" and ");
System.out.println( Plus2);  
}
public static void computePercent(double a,double b){
      if (b != 0){
       double percentage = (a / b) * 100;
        System.out.printf("%.1f is %.0f percent of %.1f.%n",a,percentage,b);
       }else{
           System.out.println("The second is cannot be zero");
       }     
}
}
